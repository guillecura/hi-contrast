{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}
<header class="contact-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
  {{#if @blog.logo}}
    <figure class="page-logo" style="background-image: url('{{@blog.logo}}');">
      <img src="{{@blog.logo}}" alt="{{@blog.title}}" width="0" height="0"/>
    </figure>
  {{/if}}
</header>

<main class="contact-content" role="main">
  <article class="{{post_class}}">

    <header class="post-header">
      <h1 class="post-title">{{title}}</h1>
    </header>

    <section class="post-content">
      {{content}}
    </section>

  </article>
</main>
{{/post}}
